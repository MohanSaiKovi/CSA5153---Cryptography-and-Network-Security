#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

int gcd(int a, int b) {
    while (b != 0) {
        int t = b;
        b = a % b;
        a = t;
    }
    return a;
}

int mod_inverse(int a, int m) {
    for (int x = 1; x < m; x++) {
        if ((a * x) % m == 1) {
            return x;
        }
    }
    return -1;
}

void affine_encrypt(char* plaintext, int a, int b, char* ciphertext) {
    int len = strlen(plaintext);
    for (int i = 0; i < len; i++) {
        if (isalpha(plaintext[i])) {
            char base = isupper(plaintext[i]) ? 'A' : 'a';
            ciphertext[i] = ((a * (plaintext[i] - base) + b) % 26) + base;
        } else {
            ciphertext[i] = plaintext[i];
        }
    }
    ciphertext[len] = '\0';
}

void affine_decrypt(char* ciphertext, int a, int b, char* plaintext) {
    int len = strlen(ciphertext);
    int a_inv = mod_inverse(a, 26);
    if (a_inv == -1) {
        printf("No modular inverse for the given 'a'. Decryption is not possible.\n");
        exit(1);
    }
    for (int i = 0; i < len; i++) {
        if (isalpha(ciphertext[i])) {
            char base = isupper(ciphertext[i]) ? 'A' : 'a';
            plaintext[i] = (a_inv * ((ciphertext[i] - base - b + 26) % 26)) % 26 + base;
        } else {
            plaintext[i] = ciphertext[i];
        }
    }
    plaintext[len] = '\0';
}

int main() {
    char plaintext[100], ciphertext[100], decryptedtext[100];
    int a, b, choice;

    printf("Enter the values for 'a' and 'b': ");
    scanf("%d %d", &a, &b);

    if (gcd(a, 26) != 1) {
        printf("Invalid value of 'a'. It must be coprime with 26.\n");
        return 1;
    }

    printf("Enter the plaintext: ");
    getchar();
    fgets(plaintext, sizeof(plaintext), stdin);
    plaintext[strcspn(plaintext, "\n")] = '\0';

    printf("Choose operation (1-Encrypt, 2-Decrypt): ");
    scanf("%d", &choice);

    if (choice == 1) {
        affine_encrypt(plaintext, a, b, ciphertext);
        printf("Encrypted text: %s\n", ciphertext);
    } else if (choice == 2) {
        affine_decrypt(plaintext, a, b, decryptedtext);
        printf("Decrypted text: %s\n", decryptedtext);
    } else {
        printf("Invalid choice.\n");
        return 1;
    }

    return 0;
}
